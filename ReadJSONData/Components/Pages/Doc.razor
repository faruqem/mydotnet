<p><b>Blazor Component: Components/Pages/ListPerson.razor</b></p>
<p><pre><code>@@page "/listperson"
@@inject YourProject.Services.PersonService PersonService

&lt;h3&gt;Person List&lt;/h3&gt;

@@if (persons == null)
{
    &lt;p&gt;&lt;em&gt;Loading...&lt;/em&gt;&lt;/p&gt;
}
else if (!persons.Any())
{
    &lt;p>No persons found.&lt;/p>
}
else
{
    &lt;ul>
        @@foreach (var person in persons)
        {
            &lt;li>@@person.Name (Age: @@person.Age)&lt;/li&gt;
        }
    &lt;/ul&gt;
}

@@code {
    private List&lt;YourProject.Models.Person&gt;? persons;

    protected override async Task OnInitializedAsync()
    {
        persons = await PersonService.GetPersonsAsync();
    }
}</code></pre></p>